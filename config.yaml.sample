# Configuration for Javadoc Automation

logging:
  level: "INFO" # INFO, DEBUG, WARNING, ERROR
  verbose: false # Ensure to set to true to enable debug logs


git:
  repo_url: "https://github.com/your-org/your-repo.git"
  token: "YOUR_GIT_TOKEN"  # Or use env var GIT_TOKEN
  base_branch: "PROD"
  provider: "github" # "github" or "gitlab"
  project_id: "12345" # REQUIRED for GitLab: Project ID or URL-encoded path (e.g. "group%2Fproject")
  # api_url: "https://gitlab.example.com/api/v4" # Optional: For self-hosted instances
  # ssl_verify: true # Set to false to disable SSL verification, or provide path to CA bundle (e.g. "/path/to/cert.pem")


llm:
  api_key: "${OPENAI_API_KEY}" # Read from environment variable
  model_name: "gemini-1.5-pro"
  base_url: null # Optional: "http://localhost:11434/v1" or similar for internal LLMs

email:
  enabled: false
  host: "smtp.example.com"
  port: 587
  user: "user@example.com"
  password: "password"
  recipients:
    - "admin@example.com"

teams:
  enabled: false
  webhook_url: "https://outlook.office.com/webhook/..."
